{  
  "compilerOptions": {  
    "target": "es6",  
    "lib": ["dom", "dom.iterable", "esnext"],  
    "allowJs": true,  
    "skipLibCheck": true,  
    "strict": true,  
    "noEmit": false,  
    "esModuleInterop": true,  
    "module": "commonjs",  
    "moduleResolution": "node",  
    "resolveJsonModule": true,  
    "isolatedModules": true,  
    "jsx": "preserve",  
    "incremental": true,  
    "baseUrl": ".",  
    "paths": {  
      "@/*": ["./src/*"]  
    },  
    "outDir": "./dist",  
    "rootDir": ".",  
    "allowSyntheticDefaultImports": true,  
    "forceConsistentCasingInFileNames": true,  
    "noImplicitAny": true,  
    "strictNullChecks": true,  
    "types": [  
      "node",  
      "@types/node"  
    ]  
  },  
  "include": [  
    "next-env.d.ts",  
    "**/*.ts",  
    "**/*.tsx",  
    "src/**/*"  
  ],  
  "exclude": [  
    "node_modules",  
    "dist",  
    ".next"  
  ]  
}