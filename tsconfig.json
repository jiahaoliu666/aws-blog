{  
  "compilerOptions": {  
    "lib": ["dom", "dom.iterable", "esnext"],  
    "allowJs": true,  
    "skipLibCheck": true,  
    "strict": true,  
    "noEmit": false,  
    "esModuleInterop": true,  
    "module": "commonjs",  
    "moduleResolution": "node",  
    "resolveJsonModule": true,  
    "isolatedModules": true,  
    "jsx": "preserve",  
    "incremental": true,  
    "baseUrl": ".",  
    "paths": {  
      "@/*": ["./src/*"]  
    },  
    "outDir": "./dist",  
    "rootDir": "."  
  },  
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],  
  "exclude": ["node_modules"]  
}