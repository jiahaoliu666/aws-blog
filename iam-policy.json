{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "secretsmanager:GetSecretValue"
            ],
            "Resource": [
                "arn:aws:secretsmanager:ap-northeast-1:YOUR_ACCOUNT_ID:secret:/aws-blog/credentials-*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:*",
                "s3:*",
                "ses:*"
            ],
            "Resource": "*"
        }
    ]
} 